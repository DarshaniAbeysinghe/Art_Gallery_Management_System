<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="674.0" prefWidth="875.0" styleClass="my-anchor-pane" stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.art_gallery_management_system.CustomerRegiController">
    <TabPane layoutX="9.0" layoutY="66.0" prefHeight="593.0" prefWidth="854.0">
        <tabs>
            <!-- Customer Registration Tab -->
            <Tab text="Customer Registration">
                <AnchorPane prefHeight="524.0" prefWidth="855.0">
                    <children>
                        <TextField fx:id="nicField" layoutX="213.0" layoutY="42.0" prefHeight="42.0" prefWidth="196.0" promptText="NIC" />
                        <TextField fx:id="firstNameField" layoutX="213.0" layoutY="118.0" prefHeight="42.0" prefWidth="196.0" promptText="First Name" />
                        <TextField fx:id="lastNameField" layoutX="213.0" layoutY="188.0" prefHeight="42.0" prefWidth="196.0" promptText="Last Name" />
                        <TextField fx:id="emailField" layoutX="213.0" layoutY="312.0" prefHeight="42.0" prefWidth="196.0" promptText="Email" />
                        <TextField fx:id="tpNoField" layoutX="602.0" layoutY="42.0" prefHeight="42.0" prefWidth="198.0" promptText="Telephone Number" />
                        <RadioButton fx:id="maleRadioButton" layoutX="213.0" layoutY="250.0" mnemonicParsing="false" text="Male" />
                        <RadioButton fx:id="femaleRadioButton" layoutX="320.0" layoutY="250.0" mnemonicParsing="false" text="Female" />
                        <TextArea fx:id="addressField" layoutX="213.0" layoutY="376.0" prefHeight="50.0" prefWidth="196.0" promptText="Address" />

                        <Button fx:id="registerBtn" layoutX="186.0" layoutY="470.0" mnemonicParsing="false" onAction="#handleAddCustomer" prefHeight="38.0" prefWidth="150.0" text="Register" />
                        <Button fx:id="updateCustomerBtn" layoutX="374.0" layoutY="470.0" mnemonicParsing="false" onAction="#handleUpdateCustomer" prefHeight="38.0" prefWidth="150.0" text="Update" />
                        <Button fx:id="clearBtn" layoutX="562.0" layoutY="470.0" mnemonicParsing="false" onAction="#clearFieldsAction" prefHeight="38.0" prefWidth="150.0" text="Clear Form" />

                        <!-- Labels -->
                        <Label layoutX="69.0" layoutY="47.0" text="NIC:" />
                        <Label layoutX="69.0" layoutY="125.0" text="First Name:" />
                        <Label layoutX="69.0" layoutY="190.0" text="Last Name:" />
                        <Label layoutX="69.0" layoutY="260.0" text="Gender:" />
                        <Label layoutX="473.0" layoutY="50.0" text="Telephone:" />
                        <Label layoutX="69.0" layoutY="316.0" text="Email:" />
                        <Label layoutX="69.0" layoutY="383.0" text="Address:" />
                    </children>
                </AnchorPane>
            </Tab>

            <!-- Customer Details Tab -->
            <Tab text="Customer Details">
                <AnchorPane>
                    <children>
                        <TableView fx:id="customerTable" layoutX="11.0" layoutY="67.0" prefHeight="404.0" prefWidth="830.0">
                            <columns>
                                <TableColumn fx:id="colId" prefWidth="69.6" text="ID" />
                                <TableColumn fx:id="colNic" prefWidth="128.8" text="NIC" />
                                <TableColumn fx:id="colFirstName" prefWidth="128.8" text="First Name" />
                                <TableColumn fx:id="colLastName" prefWidth="128.8" text="Last Name" />
                                <TableColumn fx:id="colEmail" prefWidth="128.8" text="Email" />
                                <TableColumn fx:id="colTelephone" prefWidth="128.8" text="Telephone" />
                                <TableColumn fx:id="colGender" prefWidth="128.8" text="Gender" />
                                <TableColumn fx:id="colAddress" prefWidth="100.0" text="Address" />
                            </columns>
                        </TableView>

                        <Button fx:id="deleteCustomerBtn" layoutX="705.0" layoutY="491.0" mnemonicParsing="false" onAction="#handleDeleteCustomer" text="Delete" />
                        <TextField fx:id="searchTxt" layoutX="661.0" layoutY="14.0" promptText="Enter NIC to search" />
                        <Button fx:id="searchBtn" layoutX="558.0" layoutY="16.0" onAction="#handleSearch" text="Search" />

                    </children>
                </AnchorPane>
            </Tab>
        </tabs>
    </TabPane>

    <!-- Header Section -->
    <AnchorPane layoutX="9.0" layoutY="9.0" prefHeight="44.0" prefWidth="854.0" style="-fx-background-color: white;">
        <children>
            <Label layoutX="14.0" layoutY="7.0" styleClass="label1" text="MANAGE CUSTOMER" />
        </children>
    </AnchorPane>
</AnchorPane>
