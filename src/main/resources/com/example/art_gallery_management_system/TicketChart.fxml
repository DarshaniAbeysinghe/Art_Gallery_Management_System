<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="651.0" prefWidth="856.0" styleClass="chart-plot-background" stylesheets="@chart.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.art_gallery_management_system.TicketChartController">
   <AnchorPane layoutX="7.0" layoutY="62.0" prefHeight="574.0" prefWidth="842.0" style="-fx-background-color: white;" stylesheets="@chart.css">
      <children>
      
          <!-- ComboBox for selecting Week -->
          <ComboBox fx:id="weekComboBox" layoutX="42.0" layoutY="14.0" onAction="#onWeekSelectionChanged">
              <items>
                  <FXCollections fx:factory="observableArrayList">
                      <String fx:value="Previous Week" />
                      <String fx:value="This Week" />
                      <String fx:value="Week 1" />
                      <String fx:value="Week 2" />
                      <String fx:value="Week 3" />
                      <String fx:value="Week 4" />
                  </FXCollections>
              </items>
          </ComboBox>
      
          <!-- ComboBox for selecting Month -->
          <ComboBox fx:id="monthComboBox" layoutX="226.0" layoutY="14.0" onAction="#onMonthSelectionChanged">
              <items>
                  <FXCollections fx:factory="observableArrayList">
                      <String fx:value="January" />
                      <String fx:value="February" />
                      <String fx:value="March" />
                      <String fx:value="April" />
                      <String fx:value="May" />
                      <String fx:value="June" />
                      <String fx:value="July" />
                      <String fx:value="August" />
                      <String fx:value="September" />
                      <String fx:value="October" />
                      <String fx:value="November" />
                      <String fx:value="December" />
                  </FXCollections>
              </items>
          </ComboBox>
      </children>
   </AnchorPane>

          <!-- Bar Chart for displaying ticket counts -->
    <BarChart fx:id="ticketBarChart" layoutX="20.0" layoutY="154.0" prefHeight="476.0" prefWidth="822.0" styleClass="chart-plot-background" stylesheets="@chart.css">
        <xAxis>
            <CategoryAxis fx:id="xAxis" />
        </xAxis>
        <yAxis>
            <NumberAxis fx:id="yAxis" />
        </yAxis>
    </BarChart>
   <AnchorPane layoutX="7.0" layoutY="9.0" prefHeight="46.0" prefWidth="842.0" style="-fx-background-color: white;">
      <children>
         <Label layoutX="21.0" layoutY="8.0" styleClass="label1" stylesheets="@style.css" text="Ticket Sales" />
      </children>
   </AnchorPane>
</AnchorPane>
