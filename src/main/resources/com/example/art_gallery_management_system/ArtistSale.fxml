<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="558.0" prefWidth="738.0" styleClass="chart-plot-background" stylesheets="@chart.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.art_gallery_management_system.ArtistSaleController">
    <AnchorPane layoutX="8.0" layoutY="61.0" prefHeight="482.0" prefWidth="722.0" style="-fx-background-color: white;">
        <children>
            <!-- ComboBox for selecting the year -->
            <ComboBox fx:id="yearComboBox" layoutX="36.0" layoutY="21.0" nodeOrientation="LEFT_TO_RIGHT" onAction="#loadShareDistributionData" promptText="Select the Year" />

            <!-- ComboBox for selecting the month -->
            <ComboBox fx:id="monthComboBox" layoutX="200.0" layoutY="21.0" nodeOrientation="LEFT_TO_RIGHT" onAction="#loadShareDistributionData" promptText="Select the Month" />

            <!-- PieChart for displaying artist and gallery share distribution -->
            <PieChart fx:id="sharePieChart" layoutX="7.0" layoutY="86.0" prefHeight="400.0" prefWidth="715.0" styleClass="chart-pie" stylesheets="@chart.css" />
        </children>
    </AnchorPane>
    <AnchorPane layoutX="7.0" layoutY="6.0" prefHeight="42.0" prefWidth="722.0" style="-fx-background-color: white;">
        <children>
            <Label layoutX="14.0" layoutY="8.0" styleClass="label1" stylesheets="@style.css" text="Shares' Distribution" />
        </children>
    </AnchorPane>
</AnchorPane>
